<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5"> <!-- Gray background color -->

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo" />

    <!-- Space between logo and text fields -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <!-- TextView for "First name" label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="32dp"
        android:text="First Name :"
        android:textSize="18sp"
        android:textColor="#000000" />

    <!-- Text field for first name -->
    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/radius"
        android:hint="Ex : John"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Space between "First name" and "Last name" text fields -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <!-- TextView for "Name" label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="32dp"
        android:text="Last Name"
        android:textSize="18sp"
        android:textColor="#000000" />

    <!-- Text field for name -->
    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/radius"
        android:hint="Ex : Jackson"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstNameEditText" />

    <!-- Space between "Name" text field and button -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <!-- "Press to start" button -->
    <Button
        android:id="@+id/btnStart"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/radius"
        android:gravity="center"
        android:padding="16dp"
        android:text="Press to Start"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lastNameEditText" />

</LinearLayout>
